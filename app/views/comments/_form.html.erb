<%= form_with(model: [ post, Comment.new ], url: post_comments_path(post)) do |form| %>
    <div class="field">
      <%= form.label :content, "Add a comment:" %>
      <%= form.text_area :content, rows: 3 %>
    </div>
    <div class="actions">
      <%= form.submit "Submit Comment" %>
    </div>
  <% end %>