<%= form_with(model: [ @commentable, @comment ], url: post_comments_path(@commentable)) do |form| %>
    <div class="field">
      <%= form.label :content, "Add a comment:" %>
      <%= form.text_area :content, rows: 3 %>
    </div>
    <div class="actions">
      <%= form.submit "Submit Comment" %>
    </div>
  <% end %>