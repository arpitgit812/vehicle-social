<h1><%= @user.username %></h1>
<p><%= @user.bio %></p>

<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= button_to "Unfollow", follow_path(current_user.active_follows.find_by(followed_id: @user.id)), method: :delete %>
  <% else %>
    <%= button_to "Follow", follows_path(followed_id: @user.id), method: :post %>
  <% end %>
<% end %>